{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6", "ES2020", "ES2021" , "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}